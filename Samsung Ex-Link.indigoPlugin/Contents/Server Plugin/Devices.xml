			<State id="volume">
				<ValueType>Integer</ValueType>
				<TriggerLabel>Current Volume</TriggerLabel>
				<TriggerLabelPrefix>Volume Changed to</TriggerLabelPrefix>
				<ControlPageLabel>Current Volume</ControlPageLabel>
			</State>
			<State id="channel">
				<ValueType>Integer</ValueType>
				<TriggerLabel>Current Channel</TriggerLabel>
				<TriggerLabelPrefix>Channel Changed to</TriggerLabelPrefix>
				<ControlPageLabel>Current Channel</ControlPageLabel>
			</State>
			<State id="mute">
				<ValueType boolType="YesNo">Boolean</ValueType>
				<TriggerLabel>Mute</TriggerLabel>
				<ControlPageLabel>Mute</ControlPageLabel>
			</State>
			<State id="pictureMode">
				<ValueType>
					<List>
						<Option value="DYNAMIC">Dynamic</Option>
						<Option value="STANDARD">Standard</Option>
						<Option value="MOVIE">Movie</Option>
						<Option value="NATURAL">Natural</Option>
						<Option value="CAL_NIGHT">Calibrated (Night)</Option>
