				<TriggerLabelPrefix>Sound Mode changed to</TriggerLabelPrefix>
				<ControlPageLabel>Sound Mode</ControlPageLabel>
			</State>
			<State id="pictureSize">
				<ValueType>
					<List>
						<Option value="SIXTEEN_NINE">16:9</Option>
						<Option value="ZOOM1">Zoom 1</Option>
						<Option value="ZOOM2">Zoom 2</Option>
						<Option value="WIDE_FIT">Wide Fit</Option>
